<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/kl_phoneregisterl"
        android:layout_width="320dp"
        android:layout_height="300dp"
        android:background="@drawable/klloginb"
        android:orientation="vertical"
         >

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/kl_iphoneback"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/kl_back" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/kl_bar" />

                <ImageView
                    android:id="@+id/kl_iphoneclose"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/kl_close" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/kleditlogin"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/pop"
                android:layout_width="wrap_content"
                android:layout_height="35dp" >

                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/kl_reisterphone"
                    android:padding="5dp" />

                <EditText
                    android:id="@+id/kl_edit_iphone"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/user_icon"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入手机号码"
                    android:inputType="phone"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:textColor="@color/klfont_black"
                    android:textColorHint="@color/klfont_somber"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/kleditlogin"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/pwd_icon"
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/kl_reisterwrite"
                        android:padding="5dp" />

                    <EditText
                        android:id="@+id/kl_edit_cord"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/pwd_icon"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入验证码"
                        android:maxLength="16"
                        android:singleLine="true"
                        android:textColor="@color/klfont_black"
                        android:textColorHint="@color/klfont_somber"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/kl_codebt"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_toRightOf="@+id/kl_edit_cord"
                android:background="@drawable/klorange_btn_style"
                android:text="发送验证码"
                android:textColor="@color/klfont_white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/kleditlogin"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/pwd_icon2"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/kl_logincode"
                    android:padding="5dp" />

                <EditText
                    android:id="@+id/kl_edit_password2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/pwd_icon2"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:textColor="@color/klfont_black"
                    android:textColorHint="@color/klfont_somber"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/kl_checkbox" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:text="我已同意并阅读"
                android:textColor="@color/klfont_somber" />

            <TextView
                android:id="@+id/usrtagreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户注册协议》"
                android:textColor="@color/klfont_orange" />
        </LinearLayout>

        <Button
            android:id="@+id/kl_phoneregister"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/klorange_btn_style"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/klfont_white"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/kl_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="您也可以通过"
                android:textColor="@color/klfont_somber"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/kl_userregistertv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/kl_tip"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="用户注册"
                android:textColor="@color/klfont_orange"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kl_userregisterl"
        android:layout_width="320dp"
        android:layout_height="300dp"
        android:visibility="gone"
        android:background="@drawable/klloginb"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/kl_userback"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/kl_back" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/kl_bar" />

                <ImageView
                    android:id="@+id/kl_userclose"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/kl_close" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/kleditlogin"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/pop1"
                android:layout_width="wrap_content"
                android:layout_height="35dp" >

                <ImageView
                    android:id="@+id/user_icon1"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/kl_loginname"
                    android:padding="5dp" />

                <EditText
                    android:id="@+id/kl_edit_user"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/user_icon1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入您想使用的帐户名称"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:textColor="@color/klfont_black"
                    android:textColorHint="@color/klfont_somber"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/kleditlogin"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/pwd_icon1"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/kl_logincode"
                    android:padding="5dp" />

                <EditText
                    android:id="@+id/kl_edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/pwd_icon1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入密码"
                    android:maxLength="16"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/klfont_black"
                    android:textColorHint="@color/klfont_somber"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/kleditlogin"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/pwd_icon3"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/kl_logincode"
                    android:padding="5dp" />

                <EditText
                    android:id="@+id/kl_edit_password3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/pwd_icon3"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请再次确认密码"
                    android:maxLength="16"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/klfont_black"
                    android:textColorHint="@color/klfont_somber"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/kl_checkbox" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:text="我已同意并阅读"
                android:textColor="@color/klfont_somber" />

            <TextView
                android:id="@+id/usrtagreement2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户注册协议》"
                android:textColor="@color/klfont_orange" />
        </LinearLayout>

        <Button
            android:id="@+id/kl_userregisterbt"
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/klorange_btn_style"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/klfont_white"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/kl_tip1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="为了账号更安全，建议您使用"
                android:textColor="@color/klfont_somber"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/kl_iphoneregister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/kl_tip1"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="手机号注册"
                android:textColor="@color/klfont_orange"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>