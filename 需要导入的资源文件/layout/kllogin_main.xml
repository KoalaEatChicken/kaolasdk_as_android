<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="250dp"
        android:background="@drawable/klloginb"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:background="@drawable/kl_bar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/kleditlogin"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/pop"
                android:layout_width="wrap_content"
                android:layout_height="35dp" >

                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/kl_loginname"
                    android:padding="5dp" />

                <EditText
                    android:id="@+id/kl_edit_user"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/user_icon"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="账号（用户名/手机号码）"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:textColor="@color/klfont_black"
                    android:textColorHint="@color/klfont_somber"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/userlist"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/kl_edit_user"
                    android:background="@drawable/kl_login_up"
                    android:padding="5dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/kleditlogin"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/pwd_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/kl_logincode"
                    android:padding="5dp" />

                <EditText
                    android:id="@+id/kl_edit_pwd"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/pwd_icon"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="密码"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:textColor="@color/klfont_black"
                    android:textColorHint="@color/klfont_somber"
                    android:textSize="15sp" />
                  <ImageView
                    android:id="@+id/userpwd"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/kl_edit_pwd"
                    android:background="@drawable/kl_login_pwd"
                    android:padding="5dp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_gravity="center" >

            <TextView
                android:id="@+id/kl_forgetpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:text="忘记密码"
                android:textColor="@color/klfont_orange"
                android:textSize="13sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/kl_login"
            android:layout_width="240dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/klorange_btn_style"
            android:gravity="center"
            android:text="快速登录"
            android:textColor="@color/klfont_white"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/kl_directly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:text="一键注册"
                android:textColor="@color/klfont_orange"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/kl_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:text="账号注册"
                android:textColor="@color/klfont_orange"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>